	number = {6},
	journal = {Neuroreport},
	sjrq = {3},
	impactfactor = {1.3},
	author = {Saberi, Amin and Abdolalizadeh, AmirHussein and Mohammadi, Esmaeil and Nahayati, Mohammad A. and Bagheri, Hamed and Shekarchi, Babak and Kargar, Jalal},
	corresponding = {Kargar},
