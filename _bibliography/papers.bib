	year = {2021},
	pmid = {33788816},
	pages = {438--442},
	experience = {Conceptualized the study, performed data analysis and drafted the manuscript. Learned subcortical shape analysis using FSL FIRST and group-level GLM analysis.},
	date = {2021-04-07},
}

